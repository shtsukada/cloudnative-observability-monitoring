{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "monitoring-stack values",
  "type": "object",
  "properties": {
    "global": {
      "type":"object",
      "properties": {
        "namespace": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": true
    },
    "kps": {
      "type": "object",
      "description": "kube-prometheus-stack values passthrough",
      "additionalProperties": true
    },
    "contracts": {
      "type":"object",
      "properties": {
        "grafana": {
          "type":"object",
          "properties": {
            "adminSecretName": { "type":"string" }
          },
          "additionalProperties":false
        },
        "datasources": {
          "type":"object",
          "properties": {
            "enabled": { "type":"boolean" }
          },
          "additionalProperties": false
        },
        "logs": {
          "type":"object",
          "properties": {
            "toLoki": { "type":"boolean"}
          },
          "additionalProperties": false
        },
        "traces": {
          "type":"object",
          "properties": {
            "toTempo": { "type": "boolean" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
